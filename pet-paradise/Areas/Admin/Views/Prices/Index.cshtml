@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Show prices</title>
</head>
<body>
    <div>
        @Html.ActionLink("Home", "index", "Home")
        <h1>Prices</h1>
        <table>
            <tr>
                <th>Specie</th>
                <th>Price</th>
            </tr>
            @foreach(KeyValuePair<string, int> kvp in ViewBag.Repository.Prices)
            {
                <tr>
                    <td>@kvp.Key</td>
                    <td>@kvp.Value</td>
                </tr>
            }
        </table>
    </div>
</body>
</html>
